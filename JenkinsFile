pipeline {
    agent any

    tools {
        nodejs 'NodeJS_24'  // Must match the name from Global Tool Configuration
    }

    stages {
        stage('Checkout') {
            steps { git 'https://github.com/YOUR_USERNAME/YOUR_REPO.git' }
        }

        stage('Install Dependencies') {
            steps { bat 'npm ci' }
        }

        stage('Build') {
            steps { bat 'npm run build' }
        }

        stage('Run Tests') {
            steps { bat 'npm test -- --watchAll=false --ci' }
        }

        stage('Archive Artifacts') {
            steps { archiveArtifacts 'build/**' }
        }
    }

    post {
        success { echo 'Build and tests succeeded!' }
        failure { echo 'Build or tests failed. Check console logs.' }
    }
}
